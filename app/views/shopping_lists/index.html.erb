<div>
<h1>Shopping List</h1>
<div class="shopping-table">
<div>
<h3>Amount of Food to buy: <%= @all_foods.length %></h3>
<h3>Total value of food needed</h3>
</div>
<% @user_recipes.each do |recipe| %>
  <li>
   
    <ul>
      <% recipe.foods.map do |food| %>
        <li>
          <%= food.name %>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>



 <table>
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>

  
</table>

</div>
</div>