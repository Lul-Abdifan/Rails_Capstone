<div class="recipe-card-container">
  <p style="color: green"><%= notice %></p>

  <%= render @recipe %>

  <div class="recipe_d_ft">
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: 'btn-link' %> |
    <%= link_to "Back to recipes", recipes_path, class: 'btn-link' %>
    
    <%= button_to "Destroy this recipe", @recipe, method: :delete, class: 'btn-link' %>
  </div>
</div>
